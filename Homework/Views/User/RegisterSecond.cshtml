@{
    ViewData["Title"] = "Задание 2 Форма";
    Layout = "_LayoutMenu";
}

@model Homework.Models.RegistrationModelForAnAppointment

<div class="container marketing padding-boreder">
    <div class="row w3-example">

        <div class="col myunselectable">
        </div>
        <div class="col-8">
            <div class="mypadding-form col-lg-10">
                <h3 class="mb-3">Завдание 2</h3>
                <br>
                <h4 class="mb-3">Форма регистрации на консультацию.</h4>
                <form asp-controller="User" asp-action="RegisterSecond" class="needs-validation" novalidate="">
                    <div class="row g-3">

                        <div class="col-sm-6">
                            <label asp-for="FirstName" class="form-label">Имя</label>
                            <input asp-for="FirstName" class="form-control" placeholder="" required="">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Пожалуйста, введите  имя.
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="SureName" class="form-label">Фамилия</label>
                            <input asp-for="SureName" class="form-control" placeholder=""  required="">
                            <span asp-validation-for="SureName" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Пожалуйста, введите фамилию.
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="you@example.com" required="">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Пожалуйста, введите валидный адрес электронной почты.
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="DateOfConsultation" class="form-label">Желаемая дата консультации</label>
                            <input asp-for="DateOfConsultation" class="form-control" placeholder="2022-10-01T08:30" required="">
                            <span asp-validation-for="DateOfConsultation" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Пожалуйста, укажите дата консультации
                            </div>
                        </div>


                        <hr class="my-4">
                    </div>

                    <button class="w-100 btn btn-primary btn-lg" type="submit" onclick="sendforms()">Зарегистрироваться</button>
                </form>
            </div>
            <div id="modal-1" class="modals ">
                <span class="modals-close">
                    <svg viewbox="0 0 40 40">
                        <path class="close-x" d="M 10,10 L 30,30 M 30,10 L 10,30" />
                    </svg>
                </span>
                <div>
                    @if (Model != null)
                    {
                        <br>
                        <h5 class="mb-3 ">@Model.FirstName @Model.SureName</h5><br>
                        <h6 class="mb-3 ">Вы успешно зарегистрированы!</h6><br>
                        <span> Ожидаем вас на консультацию: <br>@Model.DateOfConsultation;</span><br>
                    }
                </div>
            </div>
            <div class="overlay "></div>
        </div>
        <div class="col myunselectable">
        </div>

    </div>

</div>
<!---->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script>

    var formresults = @ViewBag.Result;
    if (formresults == 1) {
        $('.overlay, #modal-1').addClass('shown');
    }

    $('.overlay, .modals-close').click(
        function () {
            $('.modals, .overlay').removeClass('shown');
        });

</script>


